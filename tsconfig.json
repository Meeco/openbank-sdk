{
    "compilerOptions": {
        "noImplicitAny": false,
        "module": "es2015",
        "target": "es5",
        "sourceRoot": "src",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "types": [
            "node"
        ],
        "lib": ["es2015", "dom"]
    },
    "exclude": [
        "node_modules",
        "bundles"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}